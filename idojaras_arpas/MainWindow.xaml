<Window x:Class="idojaras_arpas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:idojaras_arpas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listboxAdatok" 
                 ItemsSource="{Binding Cities}" 
                 SelectedItem="{Binding SelectedCity}" 
                 DisplayMemberPath="CityName"
                 Width="200" Height="300" 
                 HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="textboxBevitel" 
                 Text="{Binding NewCityName, Mode=TwoWay}" 
                 HorizontalAlignment="Left" Margin="491,52,0,0" 
                 VerticalAlignment="Top" Width="269" Height="41" 
                 FontSize="20"/>

        <TextBox x:Name="textboxTemperature" 
                 Text="{Binding NewTemperature, Mode=TwoWay}" 
                 HorizontalAlignment="Left" Margin="491,102,0,0" 
                 VerticalAlignment="Top" Width="269" Height="41" 
                 FontSize="20"/>

        <TextBox x:Name="textboxHumidity" 
                 Text="{Binding NewHumidity, Mode=TwoWay}" 
                 HorizontalAlignment="Left" Margin="491,152,0,0" 
                 VerticalAlignment="Top" Width="269" Height="41" 
                 FontSize="20"/>

        <TextBox x:Name="textboxWindSpeed" 
                 Text="{Binding NewWindSpeed, Mode=TwoWay}" 
                 HorizontalAlignment="Left" Margin="491,202,0,0" 
                 VerticalAlignment="Top" Width="269" Height="41" 
                 FontSize="20"/>

        <Button x:Name="btnHozzaadas" Content="Hozzáadás" 
                Command="{Binding AddCityCommand}" 
                HorizontalAlignment="Left" Margin="491,252,0,0" 
                VerticalAlignment="Top" Height="52" Width="146" 
                FontSize="20"/>

        <Button x:Name="btnTorles" Content="Törlés" 
                Command="{Binding RemoveCityCommand}" 
                HorizontalAlignment="Left" Margin="657,252,0,0" 
                VerticalAlignment="Top" Height="52" Width="103" 
                FontSize="20"/>

    </Grid>
</Window>
